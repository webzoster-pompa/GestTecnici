# ===========================================
# CONFIGURAZIONE DATABASE
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/gesttecnici
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gesttecnici
DB_USER=username
DB_PASSWORD=password

# ===========================================
# CONFIGURAZIONE SERVER
# ===========================================
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# ===========================================
# AUTENTICAZIONE
# ===========================================
# Genera una chiave segreta sicura con: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# APPLICAZIONE
# ===========================================
APP_NAME=GestTecnici
APP_VERSION=1.0.0

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:8081,exp://localhost:19000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug

# ===========================================
# EMAIL (opzionale)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=GestTecnici <noreply@example.com>

# ===========================================
# STORAGE (opzionale)
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# BACKUP
# ===========================================
BACKUP_DIR=./backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# NOTIFICHE PUSH (opzionale)
# ===========================================
EXPO_PUSH_TOKEN=your-expo-push-token
FIREBASE_API_KEY=your-firebase-api-key

# ===========================================
# DEPLOYMENT (PRODUCTION)
# ===========================================
# Decommentare e configurare per produzione
# RAILWAY_STATIC_URL=your-app.railway.app
# DATABASE_URL=postgresql://user:pass@hostname:port/dbname
# NODE_ENV=production
